{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "es2022"
    ],
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "build"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
